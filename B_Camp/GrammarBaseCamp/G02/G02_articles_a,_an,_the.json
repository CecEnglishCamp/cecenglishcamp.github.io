{
  "grammar_id": "G02",
  "title": "Articles (a, an, the)",
  "level": "A1",
  "category": "Basic Grammar",
  "description": "Learn when to use 'a', 'an', and 'the' correctly in different contexts",
  "status": "content_complete",
  "created_date": "2025-09-19",
  "content_status": "ready",
  "core_concept": {
    "summary": "Articles help specify nouns - indefinite (a/an) vs definite (the)",
    "key_points": [
      "Use 'a' before consonant sounds",
      "Use 'an' before vowel sounds",
      "Use 'the' for specific or known things",
      "No article needed for general plural nouns"
    ]
  },
  "rules": [
    {
      "rule_id": "R01",
      "description": "Use 'a' before words that start with consonant sounds",
      "examples": [
        "a book",
        "a cat",
        "a university (유니버시티)",
        "a one-way street"
      ]
    },
    {
      "rule_id": "R02",
      "description": "Use 'an' before words that start with vowel sounds",
      "examples": [
        "an apple",
        "an hour (아워)",
        "an umbrella",
        "an honest person"
      ]
    },
    {
      "rule_id": "R03",
      "description": "Use 'the' for specific things that both speaker and listener know",
      "examples": [
        "the book we talked about",
        "the sun",
        "the first time",
        "the same way"
      ]
    },
    {
      "rule_id": "R04",
      "description": "No article for general statements with plural nouns",
      "examples": [
        "Cats are cute",
        "Books are useful",
        "Students study hard"
      ]
    }
  ],
