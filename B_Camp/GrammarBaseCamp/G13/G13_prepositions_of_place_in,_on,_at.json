{
  "grammar_id": "G13",
  "title": "Prepositions of Place (in, on, at)",
  "level": "A1",
  "category": "Prepositions",
  "description": "Learn to use in, on, at for locations and places",
  "core_concept": {
    "summary": "Different prepositions describe different spatial relationships",
    "key_points": [
      "in = inside something (in the box)",
      "on = surface contact (on the table)",
      "at = specific locations (at school)"
    ]
  },
  "rules": [
    {
      "rule_id": "R01",
      "description": "Use 'in' for enclosed spaces",
      "examples": [
        "in the room",
        "in Korea",
        "in the car"
      ]
    },
    {
      "rule_id": "R02",
      "description": "Use 'on' for surfaces",
      "examples": [
        "on the table",
        "on the wall",
        "on the floor"
      ]
    },
    {
      "rule_id": "R03",
      "description": "Use 'at' for specific points/locations",
      "examples": [
        "at school",
        "at home",
        "at the station"
      ]
    }
  ],
  "practice_sentences": [
