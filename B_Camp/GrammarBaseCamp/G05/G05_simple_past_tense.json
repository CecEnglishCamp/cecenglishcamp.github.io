{
  "grammar_id": "G05",
  "title": "Simple Past Tense",
  "level": "A2",
  "category": "Verb Tenses",
  "description": "Learn how to express completed actions in the past using regular and irregular verbs",
  "status": "content_complete",
  "created_date": "2025-09-19",
  "content_status": "ready",
  "core_concept": {
    "summary": "Simple past shows completed actions at a specific time in the past",
    "key_points": [
      "Regular verbs: add -ed (worked, played, studied)",
      "Irregular verbs: special forms (go→went, see→saw)",
      "Use with past time expressions (yesterday, last week)",
      "Same form for all subjects (I/you/he/she/it/we/they + past form)"
    ]
  },
  "rules": [
    {
      "rule_id": "R01",
      "description": "Regular verbs: add -ed to the base form",
      "examples": [
        "work → worked",
        "play → played",
        "watch → watched",
        "listen → listened"
      ]
    },
    {
      "rule_id": "R02",
      "description": "Verbs ending in -e: add -d only",
      "examples": [
        "live → lived",
        "use → used",
        "dance → danced",
        "arrive → arrived"
      ]
    },
    {
      "rule_id": "R03",
      "description": "Short verbs (CVC pattern): double consonant + -ed",
      "examples": [
        "stop → stopped",
        "plan → planned",
        "shop → shopped"
      ]
    },
    {
      "rule_id": "R04",
      "description": "Consonant + y: change y to -ied",
      "examples": [
        "study → studied",
        "try → tried",
        "carry → carried"
      ]
    },
    {
      "rule_id": "R05",
      "description": "Irregular verbs: memorize special past forms",
      "examples": [
        "go → went",
        "see → saw",
        "come → came",
        "take → took"
      ]
    }
  ],
