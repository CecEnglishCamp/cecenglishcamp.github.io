  "title": "Comparative and Superlative",
  "level": "A2",
  "category": "Adjectives",
  "description": "Learn how to compare two or more things using comparative and superlative forms",
  "status": "content_complete",
  "created_date": "2025-09-19",
  "content_status": "ready",
  "core_concept": {
    "summary": "Comparative (2 things) uses -er/more, Superlative (3+ things) uses -est/most",
    "key_points": [
      "Short adjectives: add -er/-est (tall → taller → tallest)",
      "Long adjectives: use more/most (beautiful → more beautiful → most beautiful)",
      "Irregular forms: good → better → best",
      "Use 'than' with comparatives"
    ]
  },
  "rules": [
    {
      "rule_id": "R01",
      "description": "Short adjectives (1-2 syllables): add -er/-est",
      "examples": [
        "tall → taller → tallest",
        "fast → faster → fastest",
        "big → bigger → biggest"
      ]
    },
    {
      "rule_id": "R02",
      "description": "Long adjectives (3+ syllables): use more/most",
      "examples": [
        "beautiful → more beautiful → most beautiful",
        "expensive → more expensive → most expensive"
      ]
    },
    {
      "rule_id": "R03",
      "description": "Adjectives ending in -y: change y to -ier/-iest",
      "examples": [
        "happy → happier → happiest",
        "easy → easier → easiest"
      ]
    },
    {
      "rule_id": "R04",
      "description": "Irregular adjectives have special forms",
      "examples": [
        "good → better → best",
        "bad → worse → worst",
        "far → farther → farthest"
      ]
    },
    {
      "rule_id": "R05",
      "description": "Use 'than' with comparative, 'the' with superlative",
      "examples": [
        "Alex is taller than Sophie",
        "Ms. Emma is the kindest teacher"
      ]
    }
  ],
